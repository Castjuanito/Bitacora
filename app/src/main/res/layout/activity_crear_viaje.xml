<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bitacora.activities.Viaje.CrearViajeActivity">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonCrearViaje"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitulo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:text="Destino"
                android:textColor="@color/colorSecondary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="107dp"
                android:layout_height="31dp"
                android:text="Departamento"
                android:textAlignment="viewStart"
                android:textColor="@color/colorSecondary" />

            <Spinner
                android:id="@+id/spinnerDep"
                android:layout_width="395dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="107dp"
                android:layout_height="31dp"
                android:text="Municipio"
                android:textColor="@color/colorSecondary" />

            <Spinner
                android:id="@+id/spinnerMun"
                android:layout_width="395dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="154dp"
                android:layout_height="40dp"
                android:text="Fecha de salida"
                android:textColor="@color/colorSecondary"
                android:textSize="20sp" />

            <CalendarView
                android:id="@+id/calendarView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:foregroundTint="@color/colorAccent" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="29dp" />

            <EditText
                android:layout_width="338dp"
                android:id="@+id/editTextMateria"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Materia"
                android:textColor="@color/colorSecondary" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editTextProfeor"
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Profesor"
                android:textColor="@color/colorSecondary" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="69dp" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="407dp"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorSecondary"
        android:gravity="top|bottom"
        android:text="Nuevo viaje"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnknownId"
        tools:visibility="visible" />

    <Button
        android:id="@+id/buttonCancelar"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_marginEnd="6dp"
        android:background="@color/colorPrimary"
        android:text="Cancelar"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonCrearViaje"
        app:layout_constraintTop_toTopOf="@+id/buttonCrearViaje" />

    <Button
        android:id="@+id/buttonCrearViaje"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="21dp"
        android:background="@color/colorPrimary"
        android:text="Crear"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonCancelar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

</android.support.constraint.ConstraintLayout>